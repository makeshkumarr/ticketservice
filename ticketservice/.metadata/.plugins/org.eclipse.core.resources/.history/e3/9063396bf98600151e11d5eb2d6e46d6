package org.test.ticketservice;

import java.util.Optional;

import org.junit.Test;
import org.test.ticketservice.services.TicketService;
import org.test.ticketservice.services.impl.TicketServiceImpl;

import static org.junit.Assert.*;
public class TicketServiceTest {

	TicketService ticketService = new TicketServiceImpl();
	
	@Test
	public void testNumSeatsAvailable() {
		assertEquals(ticketService.numSeatsAvailable(Optional.empty()),6250);		
		assertEquals(ticketService.numSeatsAvailable(Optional.of(1)),1250);
		assertEquals(ticketService.numSeatsAvailable(Optional.of(2)),2000);
		assertEquals(ticketService.numSeatsAvailable(Optional.of(3)),1500);
		assertEquals(ticketService.numSeatsAvailable(Optional.of(4)),1500);

	}
	
	@Test
	public void testFindAndHoldSeats() {
		ticketService.findAndHoldSeats(50, Optional.of(1), Optional.of(2), "makeshkumar.r@gmail.com");
		assertEquals(ticketService.numSeatsAvailable(Optional.empty()),6200);		
	}
}
