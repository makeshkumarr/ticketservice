package org.test.ticketservice.dao.impl;

import org.test.ticketservice.dao.LevelSeatsDao;
import org.test.ticketservice.dao.tables.MockLevelRowsTable;
import org.test.ticketservice.dao.tables.MockVenueLevelTable;
import org.test.ticketservice.vo.LevelRowSeat;
import org.test.ticketservice.vo.LevelSeats;

public class LevelSeatsDaoImpl implements LevelSeatsDao{

	@Override
	public LevelSeats getVenueLevelSeatsInfo(int levelId) {
		return MockVenueLevelTable.INSTANCE.getLevelSeats(levelId);
	}

	@Override
	public LevelRowSeat getRowSeatsInfo(int levelId, int rowNumber, int seatNumber) {
		return MockLevelRowsTable.INSTANCE.getLevelRowSeats(levelId, rowNumber, seatNumber);
	}

	@Override
	public void reserveLevelSeats(int levelId, int rowNumber, int seatNumber) {
		MockLevelRowsTable.INSTANCE.reserveSeat(levelId, rowNumber, seatNumber);
	}

	@Override
	public void holdLevelSeats(int levelId, int rowNumber, int seatNumber) {
		MockLevelRowsTable.INSTANCE.holdSeat(levelId, rowNumber, seatNumber);
	}

}
