package org.test.ticketservice.services.vo;

import java.io.Serializable;

public class LevelSeats implements Serializable{

	private static final long serialVersionUID = 1720279830273254291L;
	
	private short levelId;
	private String levelName;
	private float price;
	private short rows;
	private short seatsPerRow;
	private short reservedSeats;
	private short holdSeats;
	
	public LevelSeats(short levelId, String levelName, float price, short rows, short seatsPerRow) {
		this.levelId = levelId;
		this.levelName = levelName;
		this.price = price;
		this.rows = rows;
		this.seatsPerRow = seatsPerRow;
	}

	public short getLevelId() {
		return levelId;
	}

	public String getLevelName() {
		return levelName;
	}

	public float getPrice() {
		return price;
	}

	public short getRows() {
		return rows;
	}

	public short getSeatsPerRow() {
		return seatsPerRow;
	}

	public short getReservedSeats() {
		return reservedSeats;
	}

	public short getHoldSeats() {
		return holdSeats;
	}
	
	public void resetReservedSeats() {
		this.reservedSeats = 0;
	}

	public void resetHoldSeats() {
		this.holdSeats = 0;
	}
	
	public void addReservedSeats(short moreSeats) {
		this.reservedSeats = (short) (this.reservedSeats + moreSeats);
	}

	public void addHoldSeats(short moreSeats) {
		this.holdSeats = (short) (this.holdSeats + moreSeats);
	}

}
