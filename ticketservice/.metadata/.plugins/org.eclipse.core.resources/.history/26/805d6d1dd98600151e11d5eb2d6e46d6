package org.test.ticketservice.vo;

public class ReservedSeat extends LevelRowSeat {

	private static final long serialVersionUID = 2352226128231609834L;
	
	private String customerEmail;

	public ReservedSeat(int levelId, int rowNumber, int seatNumber, String customerEmail) {
		super(levelId, rowNumber, seatNumber);
		this.customerEmail = customerEmail;
	}

	public ReservedSeat(IRowSeat rowSeat, String customerEmail){
		this(rowSeat.getLevelId(),rowSeat.getRowNumber(),rowSeat.getSeatNumber(), customerEmail);
	}
	
	@Override
	public boolean isReserved() {
		return true;
	}

	public String getCustomerEmail() {
		return customerEmail;
	}
		
}
